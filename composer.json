{
    "name": "light-gun/framework",
    "description": "The Light Gun Framework.",
    "keywords": ["framework", "lightgun", "react", "lumen"],
    "license": "MIT",
    "require": {
        "laravel/lumen-framework": "5.1.*",
        "react/http": "dev-master@dev",
        "react/promise": "^2.2",
        "league/climate": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "fzaninotto/faker": "~1.0"
    },
    "suggest": {
        "vlucas/phpdotenv": "Required to use .env files (~1.0)."
    },
    "autoload": {
        "psr-4": {
            "LightGun\\": "src"
        }
    },
    "config": {
        "preferred-install": "dist"
    }
}
